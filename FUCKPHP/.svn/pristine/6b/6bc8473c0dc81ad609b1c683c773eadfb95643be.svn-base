@font-face {
    font-family: raleway;
    src: url(../fonts/raleway.ttf);
}

.description
{
	float: left;
	margin-left: 10px;
}

.popular_product
{

	/*border-radius: 5px;
	box-shadow: 0 0 3px black;
	width : 90%;
	min-height: 200px;
	padding: 20px;
	margin: 15px auto;
	background-image: url("brushed.png");*/
  	position: relative;
    background-color: #fffaf3;
  	color: #573a08; 
  	box-shadow: 0px 1px 2px 0 rgba(34, 36, 38, 0.15);
  	margin: 1rem 0em;
  	padding: 1em 1em;
  	border-radius: 0.28571429rem;
  	border: 1px solid rgba(34, 36, 38, 0.15);
	min-height: 200px;
    -webkit-transition-property: background-color, box-shadow, color, border-radius;
    -webkit-transition-duration: 6s, 6s, 3s, 6s;
    -moz-transition-property: background-color, box-shadow, color, border-radius;
    -moz-transition-duration: 6s, 6s, 3s, 6s;
    transition-property: background-color, box-shadow, color, border-radius;
    transition-duration: 6s, 6s, 3s, 6s;

}

.popular_product:hover
{
	background-color: white;
	box-shadow: 0 0 1px black;
	color: black;
	border-radius: 0px;
    -webkit-transition-property: background-color, box-shadow, color, border-radius;
    -webkit-transition-duration: 4s, 4s, 3s, 4s;
    -moz-transition-property: background-color, box-shadow, color, border-radius;
    -moz-transition-duration: 4s, 4s, 3s, 4s;
    transition-property: background-color, box-shadow, color, border-radius;
    transition-duration: 4s, 4s, 3s, 4s;
}
